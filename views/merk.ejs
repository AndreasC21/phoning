<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Phoning - <%= namaMerk %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <!--include css bootstrap-->
    <link rel="stylesheet" href="/css/merk.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <!--icon-->
  </head>
  <body>
    <!-- Include Navbar -->
    <%- include('partials/navbar') %>

    <!-- Modal untuk Login dan Buat Akun -->
    <div
      class="modal fade"
      id="loginModal"
      tabindex="-1"
      aria-labelledby="loginModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="loginModalLabel">Login / Buat Akun</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!-- Tab untuk Login dan Buat Akun -->
            <ul class="nav nav-tabs" id="loginSignupTabs" role="tablist">
              <li class="nav-item" role="presentation">
                <a
                  class="nav-link active"
                  id="login-tab"
                  data-bs-toggle="tab"
                  href="#login"
                  role="tab"
                  aria-controls="login"
                  aria-selected="true"
                  >Login</a
                >
              </li>
              <li class="nav-item" role="presentation">
                <a
                  class="nav-link"
                  id="signup-tab"
                  data-bs-toggle="tab"
                  href="#signup"
                  role="tab"
                  aria-controls="signup"
                  aria-selected="false"
                  >Buat Akun</a
                >
              </li>
            </ul>
            <div class="tab-content" id="loginSignupTabsContent">
              <!-- Form Login -->
              <div
                class="tab-pane fade show active"
                id="login"
                role="tabpanel"
                aria-labelledby="login-tab"
              >
                <form action="/auth/login" method="POST">
                  <div class="mb-3">
                    <label for="name" class="form-label">Nama Pengguna</label>
                    <input
                      type="name"
                      name="name"
                      class="form-control"
                      id="name"
                      placeholder="Masukkan nama pengguna"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Kata Sandi</label>
                    <input
                      type="password"
                      name="password"
                      class="form-control"
                      id="password"
                      placeholder="Masukkan kata sandi"
                    />
                  </div>
                  <div class="d-flex justify-content-between">
                    <a href="#" class="forgot-password">Lupa Kata Sandi?</a>
                    <button type="submit" class="btn btn-primary">Masuk</button>
                  </div>
                </form>
              </div>

              <!-- Form Buat Akun -->
              <div
                class="tab-pane fade"
                id="signup"
                role="tabpanel"
                aria-labelledby="signup-tab"
              >
                <form action="/auth/register" , method="POST">
                  <div class="mb-3">
                    <label for="name" class="form-label">Nama</label>
                    <input
                      type="text"
                      name="name"
                      class="form-control"
                      id="name"
                      placeholder="Masukkan nama"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="password" class="form-label">Kata Sandi</label>
                    <input
                      type="password"
                      name="password"
                      class="form-control"
                      id="password"
                      placeholder="Masukkan kata sandi"
                    />
                  </div>
                  <div class="mb-3">
                    <label for="passwordConfirm" class="form-label"
                      >Konfirmasi Kata Sandi</label
                    >
                    <input
                      type="password"
                      name="passwordConfirm"
                      class="form-control"
                      id="passwordConfirm"
                      placeholder="Konfirmasi kata sandi"
                    />
                  </div>
                  <button type="submit" class="btn btn-primary">
                    Buat Akun
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!--Lokasi user-->
    <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">
          <%= namaMerk %>
        </li>
      </ol>
    </nav>

    <!--Search Bar -->
    <div class="ms-4">
      <form class="d-flex">
        <input
          class="form-control me-2"
          type="search"
          placeholder="Search"
          aria-label="Search"
        />
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>

    <!--Produk-->
    <div class="card-container">
      <% phones.forEach((phones) => { %>
      <div class="card">
        <img
          src="<%= phones.img_phone %>"
          class="card-img-top"
          alt="<%= phones.nama_phone %>"
        />
        <div class="card-body">
          <h6 class="card-title"><%=phones.nama_phone%></h6>
          <p class="card-price">
            <span class="discounted-price"
              >Rp<%= phones.harga.toLocaleString('id-ID') %></span
            >
            <!-- Harga setelah diskon -->
            <span class="original-price"
              >Rp<%= (phones.harga + 500000).toLocaleString('id-ID') %></span
            >
            <!-- Harga asli yang dicoret -->
          </p>
          <a
            href="<%= namaMerk %>/<%= phones.nama_phone %>"
            class="btn btn-primary"
            >More Details</a
          >
        </div>
      </div>
      <% }); %>
    </div>

    <!-- Footer -->
    <%- include('partials/footer') %>

    <!-- Include Bootstrap JS -->
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
  </body>
</html>
