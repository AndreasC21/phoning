    <!-- Include Navbar -->
    <%- include('partials/navbar') %>

    <!-- Poster content -->
    <div class="poster">
      <div>
        <h1>Welcome to Phoning!</h1>
        <p class="lead">Discover amazing products with us.</p>
        <!-- <button class="btn btn-light btn-lg">Explore Now</button> -->
      </div>
    </div>

    <!-- List Merek -->
    <div class="list-container">
      <button id="scroll-left" class="scroll-button">&lt;</button>
      <div class="list" id="list">
        <% merk.forEach((merk) => { %>
        <div class="item">
          <a href="/merk/<%= merk.nama_merk %>"> <%= merk.nama_merk %> </a>
        </div>
        <% }); %>
      </div>
      <button id="scroll-right" class="scroll-button">&gt;</button>
    </div>

    <!-- Khusus Untukmu -->
    <div class="promo">
      <h2 class="fy">Khusus Untukmu</h2>
      <div class="gallery">
        <% phones.forEach(phone => { %>
        <div class="card">
          <a href="/merk/<%= phone.nama_merk %>/<%= phone.nama_phone %>">
            <img src="<%= phone.img_phone %>" alt="<%= phone.nama_phone %>" />
            <div class="desc">
              <h5 class="name">
                <%= phone.nama_phone %> <%= phone.description %>
              </h5>
              <p1>Rp <%= (phone.harga).toLocaleString('id-ID') %></p1> <br />
              <p2>Rp <%= (phone.harga + 500000).toLocaleString('id-ID') %></p2>
            </div>
          </a>
        </div>
        <% }) %>
      </div>
    </div>

